$(document).on('turbolinks:load', function(){
    jQuery(function() {
	  	var cities;
	  	cities = $('#user_city_id').html();
	  	console.log(cities);
  		$('#user_region_id').change(function() {
		    var region, options;
		    region = $('#user_region_id :selected').text();
		    console.log(region);
		    escaped_region = region.replace(/([ #;&,.+*~\':"!^$[\]()=>|\/@])/g, '\\$1');
		    options = $(cities).filter("optgroup[label=" + escaped_region + "]").html();
		    console.log(options);
		    if (options) {
		    	$('#user_city_id').empty();
		     	$('#user_city_id').html(options);
		     	$('.selectpicker').selectpicker('refresh');
		    } else {
		      	$('#user_city_id').empty();
		      	$('.selectpicker').selectpicker('refresh');
		    }

	  	});

	});
