<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-lg-11 titulo">
    <h4>
      <i class="fa fa-angle-right"></i>Postulaciones</h4>
  </div>
</div>
<% @postulations.each do |postulation| %>
<div class="row mt margin-minus">
  <div class="col-lg-10 col-lg-offset-1">
    <div class="form-panel">
      <div class="row">
        <div class="col-lg-7 col-lg-offset-1">
          <h4><%= postulation.user.nombre %> <%= postulation.user.paterno %> <%= postulation.user.materno %></h4>
          <p>
            <%= postulation.contenido %>
          </p>
           <%= link_to 'Ver postulacion', [postulation.publication, postulation], class: "btn btn-success btn-xs" %>
        <!-- <%= link_to 'Edit', edit_publication_postulation_path(postulation.publication, postulation) %>
          <%= link_to 'Destroy', [postulation.publication, postulation], method: :delete, data: { confirm: 'Are you sure?' } %> -->
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>

