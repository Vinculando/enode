<div class="row mt">
  <div class="col-lg-12">
    <div class="form-panel">
      <h3 class="mb">
        <i class="fa fa-angle-right"></i>Perfil Academico
      </h3>

      <div class="row">
        <div class="col-lg-10 col-lg-offset-1">
          <table class="table table-striped table-advance table-hover">
            <h4>
              <i class="fa fa-angle-right"></i>
              Intereses</h4>
            <hr>
            <thead>
              <tr>
                <th>
                  <i class="fa fa-bullhorn"></i>
                  Interes
                </th>
                <th>Eliminar</th>
              </tr>
            </thead>
            <tbody>
              <% @user.interests.each do |interest| %>
              <tr>
                <td><%= interest.nombre %></td>
                <td>
                  <button class="btn btn-danger btn-xs">
                    <i class="fa fa-trash-o "></i>
                  </button>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </br>
    <hr>
    <div class="row">
      <div class="col-lg-10 col-lg-offset-1">
        <table class="table table-striped table-advance table-hover">
          <h4>
            <i class="fa fa-angle-right"></i>
            Carreras</h4>
          <hr>
          <thead>
            <tr>
              <th>
                <i class="fa fa-bullhorn"></i>
                Carrera
              </th>
              <th>Eliminar</th>
            </tr>
          </thead>
          <tbody>
            <% @user.careers.each do |career| %>
            <tr>
              <td><%= career.nombre %></td>
              <td>
                <button class="btn btn-danger btn-xs">
                  <i class="fa fa-trash-o "></i>
                </button>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>
