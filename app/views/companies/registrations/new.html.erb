<div class="form-login-registration">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <h2 class="form-login-heading">Registro Empresa</h2>
  <div class="login-wrap">

    <div class="field">
      <%= f.label :email %><br/>
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :rut %><br/>
      <%= f.text_field :rut, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label 'Razón Social' %><br/>
      <%= f.text_field :razon, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :rubro %><br/>
      <%= f.text_field :rubro, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :direccion %><br/>
      <%= f.text_field :direccion, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label 'teléfono' %><br/>
      <%= f.number_field :telefono, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label 'Región' %><br/>
      <%= f.collection_select :region_id, Region.order(:nombre), :id, :nombre, {include_blank: true}, {class: "form-control selectpicker", "data-live-search" => "true"} %>
    </div>
    <div class="field">
      <%= f.label 'Ciudad' %><br/>
      <%= f.grouped_collection_select :city_id, Region.order(:nombre), :cities, :nombre, :id, :nombre, {include_blank: true}, {class: "form-control selectpicker", "data-live-search" => "true"} %>
    </div>

    <div class="field">
      <%= f.label 'Contraseña' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>
        caracteres minimo)</em>
      <% end %><br/>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label 'Confirmar Contraseña' %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="actions"></br>
    <%= f.submit "Registrarse", class: "btn btn-theme btn-block" %>
  </div>
  <% end %>
  <div class="registration">
    Tienes una cuenta?<br/>
    <%= render "companies/shared/links" %></div>
</div>
</div>
