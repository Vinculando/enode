<%= form_for(publication) do |f| %>
<% if publication.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(publication.errors.count, "error") %>
    prohibited this publication from being saved:</h2>

  <ul>
    <% publication.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="row">
  <div class="col-lg-12">
    <div class="form-group">
      <%= f.label :titulo, class: "col-sm-4 col-sm-4 control-label" %>
      <%= f.text_field :titulo, autofocus: true, class: "form-control"  %>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="form-group">
      <%= f.label :limite, class: "col-sm-4 col-sm-4 control-label" %>
      <%= f.text_field :limite, class: "form-control", id: 'datetimepicker1'%>
    </div>
    <div class="form-group">
      <%= f.label 'Area', class: "col-sm-4 col-sm-4 control-label" %><br/>
      <%= collection_select :publication, :area_id, Area.all, :id, :nombre, {prompt: true}, {class: "form-control selectpicker", "data-live-search" => "true"} %>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="form-group">
      <%= f.label 'Tipo de publicacion', class: "col-sm-4 col-sm-4 control-label" %><br/>
      <%= collection_select :publication, :type_id, Type.all, :id, :nombre, {prompt: true}, {class: "form-control selectpicker", "data-live-search" => "true"} %>
    </div>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-lg-12">
    <div class="form-group">
      <%= f.label :problema, class: "col-sm-4 col-sm-4 control-label"  %>
      <%= f.text_area :problema, class: "form-control", rows: 4, placeholder: "..." %>
    </div>

    <div class="form-group">
      <%= f.label 'DescripciÃ³n', class: "col-sm-4 col-sm-4 control-label"  %>
      <%= f.text_area :description, class: "form-control", rows: 4, placeholder: "..." %>
    </div>

    <div class="form-group">
      <%= f.label :premios, class: "col-sm-4 col-sm-4 control-label"  %>
      <%= f.text_area :premios, class: "form-control", rows: 4, placeholder: "..." %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="actions">
      <%= f.submit class: "btn btn-success btn-lg" %>
    </div>
  </div>
</div>
<% end %>
